  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Comfortaa|Kaushan+Script&display=swap" rel="stylesheet">
    <link href='/styles/default.css', rel='stylesheet'>
    <link href='/styles/add-drink.css', rel='stylesheet'>
    <title>The Cocktail Lounge</title>
  </head>
  <body>
    <ul id='navbar' class='box flex-row'>
      <div id='logo' class='box flex-row'>The Cocktail Lounge</div>
      <div id="nav-list" class='box flex-row'>
        <li><a href="profile">Profile</a></li>
        <li><a href="review">Review</a></li>
        <li><a href="add-drink">Add Drink</a></li>
        <li><a href="search">Search</a></li>
        <li><a href="/">Home</a></li>
      </div>
    </ul>

    <h1>Add a drink!</h1>
    <form>
      <label for="name">Name</label>
      <input type="text" placeholder="Drink Name" name="name" required>
      
      <label>Ingredients List</label>
      <input type="text" placeholder="Ingredient Name" name="ingredientName">
      <input type="text" placeholder="Measurement" name="measurement">
      <select name="measurementType">
        <option value="cups">Cups</option>
        <option value="shots">Shots</option>
      </select>

      <label for="url">Image Url</label>
      <input type="text" placeholder="Image Url" name="url">

      <label for="tags">Tags</label>
      <select name="tags">
        <option value="sweet">Sweet</option>
        <option value="dry">Dry</option>
        <option value="light">Light</option>
        <option value="strong">Strong</option>
      </select>

      <button type="submit">Add Drink</button>
    </form>
  </body>